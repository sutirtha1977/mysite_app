<header id="header_top">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Astro Marketplace', root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <div class="nav navbar-nav navbar-right">
          <% if can? :manage, :all %>
            <%= link_to(rails_admin_path, class: "btn btn-success") do %> <!-- admin link -->
            <i class="fa fa-cog fa-fw"></i> <span class="hidden-xs">Admin</span>
            <% end %>
          <% end %>
          <%= render 'layouts/app/nav_auth' %>
          <% if user_signed_in? %>
          <span class="cart-text">
            <%= render 'layouts/app/cart_text' %>
          </span>
          <% end %>
        </div>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>








