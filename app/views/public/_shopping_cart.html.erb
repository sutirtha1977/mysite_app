<div class="container">
    <div class="section-header">
        <h2 class="title-one">Your <span class="highlight"><strong>Cart</strong></span></h2>
    </div>
</div>

<div class="container">
  <div class="row">
    <% if @order_items.size == 0 %>
      <p class="text-center h4">
        There are no items in your shopping cart.  Please <%= link_to "go back", root_path, class: "text-danger" %> and add some items to your cart.
      </p>
    <% else %>
    <table class="table table-condensed table-advance" id="dataTables-cart">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th class="text-center"><i class="fa fa-wrench"></i></th>
        </tr>                           
      </thead>
      <tbody class="cart-index">
        <% @order_items.each do |order_item| %>
          <%= render 'public/cart_row', listing: order_item.listing, order_item: order_item, show_total: true %>
         <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>