<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<p><%= review.rating %></p>
		</div>
		<div class="col-sm-8">
			<p><%= review.comment %></p>	
		</div>
		<% if user_signed_in? %>
			<% if review.user_id == current_user.id %>
				<div class="col-sm-2">
				<%= link_to "Edit", listing_review_path(review.listing, review) %>
				<%= link_to "Delete", listing_review_path(review.listing, review), method: :delete, remote: true %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>



